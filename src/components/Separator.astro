---
interface Props {
	bgClass:
		| "bg-primary"
		| "bg-secondary"
		| "bg-tertiary"
		| "bg-quaternary"
		| "bg-quinary"
		| "bg-senary";
}

const { bgClass } = Astro.props;
---

<div class="relative z-10 [filter:drop-shadow(0px_10px_5px_rgba(50,50,50,.2))]">
	<div class={`absolute left-0 right-0 h-[4vh] ${bgClass} [clip-path:polygon(20%_0,100%_0,77%_100%)]`} />
</div>
